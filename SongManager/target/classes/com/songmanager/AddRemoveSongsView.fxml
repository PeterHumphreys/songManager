<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Spinner?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.songmanager.AddRemoveSongsController" style="-fx-background-color: royalblue;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="pageHeader" text="Welcome to SongManager" style =" -fx-text-fill: #fff; -fx-font-size: 36"/>
    <HBox style="-fx-padding: 25 25 25 25; -fx-background-color: royalblue; -fx-spacing: 30">
        <!--Manually add a song-->
        <VBox style="-fx-padding: 25 25 25 25; -fx-background-color: cornflowerblue;">
            <!--Manually add a song-->
            <Label fx:id="mainHeader" text="Manually add a song" style =" -fx-text-fill: #fff; -fx-font-size: 24"/>
            <!--Song Title-->
            <Label fx:id="songTitleLabel" text="Song Title" style =" -fx-text-fill: #fff; -fx-font-size: 16"/> <TextField fx:id="songTitle" style="-fx-max-width: 375"></TextField>
            <!--Artist Name-->
            <Label fx:id="artistNameLabel" text="Artist Name" style =" -fx-text-fill: #fff; -fx-font-size: 16"/><TextField fx:id="artistName" style="-fx-max-width: 375"></TextField>
            <!--Album Name-->
            <Label fx:id="albumLabel" text="Album" style =" -fx-text-fill: #fff; -fx-font-size: 16"/><TextField fx:id="album" style="-fx-max-width: 375"></TextField>
            <!--Genre Label-->
            <Label fx:id="genreLabel" text="Genre" style =" -fx-text-fill: #fff; -fx-font-size: 16"/><TextField fx:id="genre" style="-fx-max-width: 375"></TextField>
            <!--Song Length-->
            <Label fx:id="songLengthLabel" text="Song Length (HH:MM:SS)" style =" -fx-text-fill: #fff; -fx-font-size: 16"/>
            <HBox>
                <Spinner fx:id="hourSpinner" prefWidth="60">
                    <valueFactory>
                        <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory fx:id="hourValueFactory">
                            <min>00</min>
                            <max>23</max>
                            <wrapAround>true</wrapAround>
                        </javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory>
                    </valueFactory>
                </Spinner>
                <Spinner fx:id="minuteSpinner" prefWidth="60">
                    <valueFactory>
                        <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory fx:id="minuteValueFactory">
                            <min>00</min>
                            <max>59</max>
                            <wrapAround>true</wrapAround>
                        </javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory>>
                    </valueFactory>
                </Spinner>
                <Spinner fx:id="secondSpinner" prefWidth="60">
                    <valueFactory>
                        <javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory fx:id="secondValueFactory">
                            <min>00</min>
                            <max>59</max>
                            <wrapAround>true</wrapAround>
                        </javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory>>
                    </valueFactory>
                </Spinner>
            </HBox>
            <!--Record Label-->
            <Label fx:id="recordLabelLabel" text="Record Label" style =" -fx-text-fill: #fff; -fx-font-size: 16"/><TextField fx:id="recordLabel" style="-fx-max-width: 375"></TextField>
            <!--Year-->
            <Label fx:id="yearReleasedLabel" text="Year Released" style =" -fx-text-fill: #fff; -fx-font-size: 16"/><ComboBox fx:id="yearReleased" style="-fx-max-width: 375"></ComboBox>
            <!--User feedback message-->
            <Label fx:id="feedbackLabel" text="" style =" -fx-text-fill: #fff; -fx-font-size: 16; -fx-font-size: 16"/>
            <!--Add Song Button-->
            <Button fx:id="addSongBtn" text="Add Song" onAction="#AddSongBtnClick" style="-fx-padding: 5;"/>
        </VBox>
        <VBox style="-fx-padding: 25 25 25 25; -fx-background-color: cornflowerblue;">
            <!--List of Songs-->
            <Label fx:id="songListHeader" text="List of Songs" style =" -fx-text-fill: #fff; -fx-font-size: 16; -fx-font-size: 24"/>
            <ComboBox fx:id="songList" style="-fx-max-width: 375"></ComboBox>

        </VBox>
    </HBox>


</VBox>
